<Window x:Class="KG_Zapret.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Width="500"
        Height="500"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">
    
    <Grid>
        <Border Background="#1E1E1E" 
                CornerRadius="20"
                BorderThickness="2"
                BorderBrush="#0077FF">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <!-- Logo Image -->
                <Image Grid.Row="0" 
                       Source="images/icon.png" 
                       Width="300" 
                       Height="300"
                       Margin="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <!-- Loading Text -->
                <TextBlock Grid.Row="1" 
                           Text="Загрузка KG-Zapret..." 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Progress Bar -->
                <ProgressBar Grid.Row="2" 
                             IsIndeterminate="True"
                             Height="8"
                             Margin="40,0,40,20"
                             Foreground="#0077FF"
                             Background="#2D2D2D"
                             BorderThickness="0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
