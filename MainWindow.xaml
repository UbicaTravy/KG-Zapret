<Window x:Class="KG_Zapret.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:KG_Zapret.Converters"
        mc:Ignorable="d"
        Title="KG-Zapret" 
        Height="750" 
        Width="480"
        MinHeight="52"
        MinWidth="42"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}"
        Icon="images/icon.ico">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="10pt"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Image and Text -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Image -->
            <Image Grid.Column="0" 
                x:Name="mainImage" 
                Source="images/icon.png" 
                Width="80" 
                Height="80"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,0,15,0"/>

            <!-- Text Content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <!-- Main Title -->
                <TextBlock Text="KG-Zapret GUI" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        Margin="0,0,0,5"/>
                
                <!-- Description -->
                <TextBlock Text="KG-Zapret GUI - ПО для ускорения интернета. Она полностью бесплатна и OpenSource. Данный проект копия проекта Zapret GUI (https://github.com/youtubediscord/zapret)"
                        FontSize="11"
                        TextWrapping="Wrap"
                        Foreground="#666666"
                        MaxWidth="300"/>
            </StackPanel>
        </Grid>

        <!-- Separator -->
        <Separator Grid.Row="1" Margin="0,0,0,10"/>

        <!-- Status -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Статус программы:" FontWeight="Bold" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding ProcessStatus}"/>
        </StackPanel>

        <!-- Current Strategy -->
        <TextBlock Grid.Row="3" 
                   Text="Текущая стратегия:" 
                   FontWeight="Bold" 
                   FontSize="11" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,5"/>

        <TextBlock Grid.Row="4" 
                   Text="{Binding CurrentStrategy}" 
                   FontWeight="Bold" 
                   FontSize="12" 
                   TextWrapping="Wrap" 
                   TextAlignment="Center" 
                   MinHeight="40" 
                   Margin="0,0,0,10"/>

        <!-- Change Strategy Button -->
        <Button Grid.Row="5" 
                x:Name="SelectStrategyButton" 
                Command="{Binding SelectStrategyCommand}"
                Background="#0077FF"
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="Settings" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                <TextBlock Text=" Сменить стратегию обхода блокировок" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <!-- Action Buttons Grid -->
        <Grid Grid.Row="6" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Start/Stop Button (switches between Start and Stop) -->
            <Button Grid.Row="0" 
                    Grid.Column="0" 
                    x:Name="StartStopButton"
                    Command="{Binding StartStopCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#369946"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDpiRunning}" Value="True">
                                <Setter Property="Background" Value="#FF5DAE"/>
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Stop" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                                            <TextBlock Text=" Остановить Zapret" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsDpiRunning}" Value="False">
                                <Setter Property="Background" Value="#369946"/>
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Play" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                                            <TextBlock Text=" Запустить Zapret" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Autostart Button (switches between Enable and Disable) -->
            <Button Grid.Row="0" 
                    Grid.Column="1" 
                    x:Name="AutostartButton"
                    Command="{Binding AutostartCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#369946"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAutostartEnabled}" Value="True">
                                <Setter Property="Background" Value="#FF5DAE"/>
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Close" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                                            <TextBlock Text=" Выкл. автозапуск" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsAutostartEnabled}" Value="False">
                                <Setter Property="Background" Value="#369946"/>
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Check" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                                            <TextBlock Text=" Вкл. автозапуск" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Open Folder Button -->
            <Button Grid.Row="1" 
                    Grid.Column="0" 
                    Command="{Binding OpenFolderCommand}"
                    Background="#0077FF">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="FolderOpen" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                    <TextBlock Text=" Папка Zapret" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Test Connection Button -->
            <Button Grid.Row="1" 
                    Grid.Column="1" 
                    Command="{Binding TestConnectionCommand}"
                    Background="#0077FF">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Wifi" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                    <TextBlock Text=" Тест соединения" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- DNS Settings Button -->
            <Button Grid.Row="2" 
                    Grid.Column="0" 
                    Command="{Binding DnsSettingsCommand}"
                    Background="#0077FF">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Network" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                    <TextBlock Text=" Настройка DNS" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Proxy Button (span 2 columns) -->
            <Button Grid.Row="3" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2"
                    Command="{Binding ProxyCommand}"
                    Background="#DAA520">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="LockOpen" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                    <TextBlock Text="Разблокировать популярные сервисы" VerticalAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <!-- Update Check Button -->
            <Button Grid.Row="4" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2" 
                    Command="{Binding UpdateCheckCommand}"
                    Background="#262626">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Sync" VerticalAlignment="Center" Margin="0,0,5,0" Width="16" Height="16"/>
                    <TextBlock Text=" Проверить обновления" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Theme Selector -->
        <TextBlock Grid.Row="7" 
                   Text="Тема оформления:" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,5"/>

        <ComboBox Grid.Row="7" 
                  x:Name="ThemeComboBox" 
                  SelectionChanged="ThemeComboBox_SelectionChanged" 
                  Margin="0,25,0,10" 
                  HorizontalAlignment="Stretch"/>

        <!-- Status Label -->
        <TextBlock Grid.Row="8" 
                   Text="{Binding StatusText}" 
                   TextAlignment="Center" 
                   FontSize="9" 
                   Foreground="Gray" 
                   VerticalAlignment="Bottom" 
                   Margin="0,0,0,10"/>

        <!-- Spacer -->
        <TextBlock Grid.Row="9" Text="" Height="20"/>
    </Grid>
</Window>

